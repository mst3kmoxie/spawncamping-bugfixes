/**
 * A bank account has a balance that can be changed by
 * deposits and withdrawals
 * 
 * @author moxie
 *
 */

public class BankAccount {

	// Constructs a bank account with a zero balance.
	public BankAccount() {
		balance = 0;

	}
	
	// Constructs a bank account with a given balance.
	// @param initialBalance = the initial balance
	
	public BankAccount(double initialBalance) {
		balance = initialBalance;

	}
	
	// Deposits money into the bank account.
	// @param amount = amount to deposit
	
	public void deposit(double amount) {
		double newBalance = balance + amount;
		balance = newBalance;
		
	}
	
	// Withdraws money from the bank account.
	// @param withdraw = the amount to withdraw
	
	public void withdraw(double amount) {
		double newBalance = balance - amount;
		balance = newBalance;
		
	}
	
	// Shows how much interest has been earned on the bank account.
	
	/** public double interest(double rate) {
		double interestEarned = balance * rate;
		return interestEarned;
		
	} **/
	
	//Adds interest to the bank account.
	// @param rate = rate of interest applied to balance
	
	public void addInterest(double rate) {
		double interestEarned = balance * rate;
		double newBalance = balance + interestEarned;
		balance = newBalance;
		
	}
	
	// Gets the current balance of the bank account.
	// @return the current balance
	
	public double getBalance() {
		return balance;
		
	}
	
	private double balance;
}


=========================

// A class to test the BankAccount class.

public class BankAccountTester {
	public static void main(String[] args) {

		BankAccount harrysChecking = new BankAccount();
		harrysChecking.deposit(2000);
		harrysChecking.withdraw(500);
		harrysChecking.addInterest(10);
	
		
		System.out.println("Harry's checking balance is:  " + harrysChecking.getBalance());
		System.out.println("Expected: 1650");
		
		BankAccount moxieChecking = new BankAccount(1500);
		moxieChecking.deposit(112.33);
		moxieChecking.deposit(180.01);
		moxieChecking.withdraw(25);
		
		System.out.println("Moxie's checking balance is:  " + moxieChecking.getBalance());
		System.out.println("Expected:" + (112.33+180.01+1500-25));
	
		
		
		
	}
}
